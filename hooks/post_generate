#!/bin/bash

set -e

latest_deb_url='hohoho'
find "$PAGEGEN_TARGET_DIR" -type f -exec sed -i "s/PAGEGEN_LATEST_DEB_URL/$latest_deb_url/g" {} \;

yui-compressor -o "$PAGEGEN_SITE_DIR/include/css/style.min.css" "$PAGEGEN_SITE_DIR/include/css/style.css" || exit 1

site_min_js="$PAGEGEN_TARGET_DIR/include/javascript/site.min.js"
#exit 1
cat "$PAGEGEN_SITE_DIR/include/javascript/jquery.min.js" > "$site_min_js"
yui-compressor "$PAGEGEN_SITE_DIR/include/javascript/navigation.js" >> "$site_min_js"